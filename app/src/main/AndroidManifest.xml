<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ikmr.banbara23.yaeyama_liner_checker"
    >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".core.ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".front.top.MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".front.status.list.StatusListTabActivity"
            android:label="@string/title_activity_status_list"
            />
        <activity
            android:name=".front.info.InfoActivity"
            android:label="@string/title_activity_other"
            />
        <activity
            android:name=".front.setting.SettingActivity"
            android:label="@string/title_activity_setting"
            />
        <activity
            android:name=".front.status.detail.StatusDetailActivity"
            android:label="@string/title_activity_status_detail"
            />
        <activity
            android:name=".front.weather.WeatherActivity"
            android:label="@string/title_activity_weather"
            android:theme="@style/AppTheme.NoActionBar"
            >
        </activity>
    </application>

</manifest>