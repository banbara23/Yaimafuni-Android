<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="com.ikmr.banbara23.yaeyama_liner_checker.R"/>

        <import type="android.view.View"/>

        <import type="android.text.TextUtils"/>

        <variable
            name="statusViewModel"
            type="com.ikmr.banbara23.yaeyama_liner_checker.front.status.detail.StatusDetailViewModel"
            />
    </data>

    <android.support.v7.widget.CardView
        style="@style/detail_card"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/view_status_detail_top_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                >

                <ImageView
                    android:id="@+id/view_status_detail_top_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:srcCompat="@{statusViewModel.statusImage}"
                    tools:src="@drawable/ic_status_normal"
                    />

                <!--ステータス文字-->
                <TextView
                    android:id="@+id/view_status_detail_top_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/secondary_text"
                    android:layout_marginLeft="16dp"
                    android:text="@{statusViewModel.portStatus.get().getStatus().getText()}"
                    android:layout_toEndOf="@+id/view_status_detail_top_image"
                    android:layout_toRightOf="@+id/view_status_detail_top_image"
                    android:textSize="20sp"
                    tools:text="通常運航"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/view_status_detail_top_status_comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{TextUtils.isEmpty(statusViewModel.portStatus.get().getComment())? View.GONE : View.VISIBLE}"
                >
                <!--区切り横線-->
                <include
                    layout="@layout/delimiter"
                    />

                <!--更新日時-->
                <!--<TextView-->
                <!--android:id="@+id/view_status_detail_top_update_text"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:textColor="@color/dark_grey"-->
                <!--android:textSize="12sp"-->
                <!--tools:text="2015年12月24日 06:00時点"-->
                <!--/>-->

                <!--コメント（安栄のみ）-->
                <TextView
                    android:id="@+id/view_status_detail_top_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/secondary_text"
                    android:text="@{statusViewModel.portStatus.get().getComment()}"
                    android:layout_marginTop="8dp"
                    android:maxLines="5"
                    tools:text="通常運航通"
                    />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>