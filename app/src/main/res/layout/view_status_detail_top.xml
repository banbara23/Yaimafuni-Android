<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <import type="com.ikmr.banbara23.yaeyama_liner_checker.R"/>

        <import type="android.view.View"/>

        <import type="android.text.TextUtils"/>

        <variable
            name="statusViewModel"
            type="com.ikmr.banbara23.yaeyama_liner_checker.front.status.detail.StatusDetailViewModel"
            />
    </data>

    <android.support.v7.widget.CardView
        style="@style/detail_card"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/view_status_detail_top_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@{statusViewModel.portStatus.get().portName}"
                    android:textColor="@color/secondary_text"
                    android:textSize="20dp"
                    tools:text="波照間航路"
                    />

                <!--ステータス文字-->
                <TextView
                    android:id="@+id/view_status_detail_top_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:background="@{statusViewModel.statusColor}"
                    android:padding="4dp"
                    android:text="@{statusViewModel.portStatus.get().getStatus().getText()}"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:background="@color/status_normal"
                    tools:text="通常運航"
                    />
            </RelativeLayout>

            <!--コメント-->
            <TextView
                android:id="@+id/view_status_detail_top_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:text="@{statusViewModel.portStatus.get().getComment()}"
                android:visibility="@{TextUtils.isEmpty(statusViewModel.portStatus.get().getComment())? View.GONE : View.VISIBLE}"
                tools:text="通常運航通通常運航通通常運航通通常運航通通常運航通通常運航通"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>