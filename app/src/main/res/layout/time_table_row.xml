<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <import type="android.view.View"/>

        <import type="com.ikmr.banbara23.yaeyama_liner_checker.common.StatusHelper"/>

        <variable
            name="row"
            type="com.ikmr.banbara23.yaeyama_liner_checker.model.time_table.Row"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:paddingLeft="16dp"
                >

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:text="@{row.left.time}"
                    android:textColor="@color/secondary_text"
                    tools:text="06:00"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{row.left.status.text}"
                    android:textColor="@{StatusHelper.getStatusColor(row.left.status.code)}"
                    tools:text="通常運行"
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/list_header"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:paddingLeft="16dp"
                >

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:text="@{row.right.time}"
                    android:textColor="@color/secondary_text"
                    tools:text="06:00"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{row.right.status.text}"
                    android:textColor="@{StatusHelper.getStatusColor(row.right.status.code)}"
                    tools:text="通常運行"
                    />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_header"
            />
    </LinearLayout>
</layout>