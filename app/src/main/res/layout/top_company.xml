<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/icon"
                srcCompat="@drawable/ic_boat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_boat"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/top_card_col_height"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:text="会社別の運行情報"
                app:layout_constraintStart_toEndOf="@+id/icon"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                />

            <ProgressBar
                android:id="@+id/activity_top_progressbar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/orange2"
                android:indeterminateTintMode="src_in"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/anei"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/top_card_col_height"
                android:gravity="center_vertical"
                android:text="安栄観光"
                android:textColor="#DE000000"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@id/title"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/anei"
                />

            <TextView
                android:id="@+id/ykf"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/top_card_col_height"
                android:gravity="center_vertical"
                android:text="八重山観光フェリー"
                android:textColor="#DE000000"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@id/anei_status"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ykf"
                />

            <TextView
                android:id="@+id/dream"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/top_card_col_height"
                android:gravity="center_vertical"
                android:text="石垣ドリーム"
                android:textColor="#DE000000"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@id/ykf"
                />

            <TextView
                android:id="@+id/anei_status"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="通常運行"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                />

            <TextView
                android:id="@+id/ykf_status"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="欠航あり"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/anei_status"
                />

            <TextView
                android:id="@+id/dream_status"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="注意あり"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ykf_status"
                />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>