<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.ikmr.banbara23.yaeyama_liner_checker.front.status.detail.LinerInfoViewModel"
            />
    </data>

    <android.support.v7.widget.CardView
        style="@style/detail_card"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!--ヘッダー-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <!--ヘッダー文字-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:text="料金"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:text="片道"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:text="往復"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />
            </LinearLayout>


            <include layout="@layout/delimiter"/>

            <!--大人-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="大人"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text='@{viewModel.detailLinerInfo.get().adultOneWayFare + "円"}'
                    tools:text="3,090円"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text='@{viewModel.detailLinerInfo.get().adultRoundTripFare + "円"}'
                    tools:text="3,090円"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <!--子ども-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="子供"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:visibility="@{viewModel.detailLinerInfo.get().childOneWayFare == 0 ? View.GONE : View.VISIBLE}"
                    android:text='@{viewModel.detailLinerInfo.get().childOneWayFare + "円"}'
                    tools:text="3,090円"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="@{viewModel.detailLinerInfo.get().childRoundTripFare == 0 ? View.GONE : View.VISIBLE}"
                    android:textSize="16sp"
                    android:text='@{viewModel.detailLinerInfo.get().childRoundTripFare + "円"}'
                    tools:text="3,090円"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <!--障害者-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="障害者"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:visibility="@{viewModel.detailLinerInfo.get().disabilityOneWayFare == 0 ? View.GONE : View.VISIBLE}"
                    android:text='@{viewModel.detailLinerInfo.get().disabilityOneWayFare + "円"}'
                    tools:text="3,090円"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:visibility="@{viewModel.detailLinerInfo.get().disabilityRoundTripFare == 0 ? View.GONE : View.VISIBLE}"
                    android:text='@{viewModel.detailLinerInfo.get().disabilityRoundTripFare + "円"}'
                    tools:text="3,090円"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>