            <!--</android.support.v7.widget.CardView>-->
        </LinearLayout>

        <FrameLayout
            android:id="@+id/activity_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:background="#007AB7"
            />

        <ImageView
            android:id="@+id/activity_bottom_ship_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/activity_bottom_view"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="-33dp"
            android:src="@drawable/ship"
            />

        <com.daasuu.bl.BubbleLayout
            android:id="@+id/activity_top_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/activity_bottom_view"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="-44dp"
            android:layout_toRightOf="@+id/activity_bottom_ship_image"
            android:onClick="onClick"
            android:padding="8dp"
            app:bl_arrowDirection="left"
            app:bl_arrowHeight="8dp"
            app:bl_arrowPosition="20dp"
            app:bl_arrowWidth="8dp"
            app:bl_cornersRadius="30dp"
            app:bl_strokeColor="@color/white"
            app:bl_strokeWidth="1dp"
            >

            <TextView
                android:id="@+id/activity_top_weather_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/activity_bottom_view"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{viewModel.todayWeather}"
                android:textColor="@color/secondary_text"
                tools:text="@string/other_info"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                />
        </com.daasuu.bl.BubbleLayout>
    </RelativeLayout>
