<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_background"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/include_title_bar"
            layout="@layout/header_back"
            app:title='@{"台風情報"}'
            />

        <TextView
            android:id="@+id/empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:text="台風は発生していません。"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:name="com.ikmr.banbara23.yaeyama_liner_checker.front.typhoon.TyphoonDetailFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layoutManager="LinearLayoutManager"
            tools:context="com.ikmr.banbara23.yaeyama_liner_checker.front.typhoon.list.TyphoonListFragment"
            tools:listitem="@layout/typhoon_list_item"
            />

    </LinearLayout>

</layout>
