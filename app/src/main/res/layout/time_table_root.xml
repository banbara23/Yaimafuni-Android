<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="timeTableViewModel"
            type="com.ikmr.banbara23.yaeyama_liner_checker.front.status.detail.TimeTableViewModel"
            />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_time_annei_table_timetable_view"
        style="@style/detail_card"
        android:visibility="@{timeTableViewModel.canShow ? View.VISIBLE : View.GONE}"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="時間別"
                android:textColor="@color/secondary_text"
                android:textSize="16sp"
                />

            <include
                layout="@layout/time_table_header"
                app:header="@{timeTableViewModel.header}"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:inflateData="@{timeTableViewModel.rows}"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>