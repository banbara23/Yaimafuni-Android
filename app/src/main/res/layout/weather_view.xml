<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="titleText"
            type="String"
            />

        <variable
            name="viewModel"
            type="com.ikmr.banbara23.yaeyama_liner_checker.model.weather.WeatherViewModel"
            />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            >

            <!--タイトル-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:padding="8dp"
                android:text='@{titleText + "の天気 " + viewModel.weather.get().date}'
                android:textColor="@color/white"
                tools:text="今日の天気"
                />
            <!--天気-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/secondary_text"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text='@{"天気 ： " + viewModel.weather.get().weather}'
                tools:text="天気 ： 晴れ"
                />
            <!--気温-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/secondary_text"
                android:text="気温"
                />
            <!--最高-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="32dp"
                android:text='@{"最高 ： " + viewModel.weather.get().temperature.hight}'
                tools:text="最高 ： 29℃"
                />
            <!--最低-->
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/secondary_text"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="32dp"
                android:text='@{"最低 ： " + viewModel.weather.get().temperature.low}'
                tools:text="最低 ： 29℃"
                />
            <!--風-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="4dp"
                android:text='@{"風 ： " + viewModel.weather.get().wind}'
                tools:text="風 ： 北東の風やや強く℃"
                />
            <!--波-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/secondary_text"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:text='@{"風 ： " + viewModel.weather.get().wave}'
                tools:text="波 ： 3メートル"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/dark_grey"
                />

            <!--3時間毎の天気-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:padding="8dp"
                android:text="3時間毎の天気"
                />

            <!--追加先レイアウト-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:weightSum="5"
                app:inflateYourTimes="@{viewModel.weather.get().table}"
                >
                <!--先頭はタイトル-->
                <include
                    layout="@layout/weather_view_row_title"
                    />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>